<h1>Refreshes#index</h1>

<% @refreshes.each do |n| %>
	<li>
		<% a = n.startdate %>
		<% b = n.expirydate %>
		<% c = b - a %>
		<% present = Time.now %>
		<%= "You have got #{(c/60/60/24).to_i} before the new date" %>
		
		<%= "There are #{(present-b).to_i / (24*60*60)} days left" %> 
	</li>
<% end %>